{
  "name": "@adonisjs/drive",
  "description": "A thin wrapper on top of Flydrive to work seamlessly with AdonisJS",
  "version": "3.4.1",
  "engines": {
    "node": ">=20.6.0"
  },
  "main": "./build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./drive_provider": "./build/providers/drive_provider.js",
    "./services/main": "./build/services/main.js",
    "./drivers/fs": "./build/drivers/fs/main.js",
    "./drivers/fs/types": "./build/drivers/fs/types.js",
    "./drivers/s3": "./build/drivers/s3/main.js",
    "./drivers/s3/types": "./build/drivers/s3/types.js",
    "./drivers/gcs": "./build/drivers/gcs/main.js",
    "./drivers/gcs/types": "./build/drivers/gcs/types.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint",
    "clean": "del-cli build",
    "copy:templates": "copyfiles --up=1 \"stubs/**/**/*.stub\" build",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "postbuild": "npm run copy:templates",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "quick:test": "node --import=ts-node-maintained/register/esm --enable-source-maps bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "@google-cloud/storage": "^7.15.2",
    "@japa/assert": "^4.0.1",
    "@japa/file-system": "^2.3.2",
    "@japa/runner": "^4.2.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "1.10.7",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "edge.js": "^6.2.1",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "supertest": "^7.0.0",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "flydrive": "^1.1.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@aws-sdk/client-s3": "^3.577.0",
    "@aws-sdk/s3-request-presigner": "^3.577.0",
    "@google-cloud/storage": "^7.10.2"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-s3": {
      "optional": true
    },
    "@aws-sdk/s3-request-presigner": {
      "optional": true
    },
    "@google-cloud/storage": {
      "optional": true
    }
  },
  "homepage": "https://github.com/adonisjs/drive#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/drive.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/drive/issues"
  },
  "keywords": [
    "drive",
    "flydrive",
    "s3",
    "gcs",
    "r2",
    "fs"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "tsup": {
    "entry": [
      "index.ts",
      "src/types.ts",
      "providers/drive_provider.ts",
      "services/main.ts",
      "drivers/fs/main.ts",
      "drivers/fs/types.ts",
      "drivers/s3/main.ts",
      "drivers/s3/types.ts",
      "drivers/gcs/main.ts",
      "drivers/gcs/types.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
